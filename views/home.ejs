<div class="container mb-5 ">
    <table class="table table-sm table-dark  table-bordered text-center ">
      <thead>
        <tr class=" table-light "style="color:black">
          <th scope="col " >REST Commands</th>
          <th scope="col" class="w-50"><h4>"/articles" route</h4> </th>
          <th scope="col" class="w-50"><h4>/articles/SpecificArticle" route</h4></th>
